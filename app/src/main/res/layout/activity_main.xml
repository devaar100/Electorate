<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_fort"
    tools:context=".MainActivity">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn1"
            android:layout_margin="7dp"
            android:text="Know Your Constituency"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="300dp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn2"
            android:layout_margin="7dp"
            android:text="Know Your Polling Station"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="300dp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn3"
            android:layout_margin="7dp"
            android:text="Facilities for PwD ( Divyang )"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="300dp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn4"
            android:layout_margin="7dp"
            android:text="Facilities for Third Gender"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="300dp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn5"
            android:layout_margin="7dp"
            android:text="Know Your Candidates"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="300dp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn6"
            android:layout_margin="7dp"
            android:text="Result"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_width="300dp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>